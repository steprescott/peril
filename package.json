{
  "name": "peril",
  "version": "0.0.1",
  "description": "Warning Danger! Danger!",
  "scripts": {
    "start": "node out/index.js",
    "dev": "node --inspect out/index.js",
    "compile": "tsc -watch -p ./",
    "build": "tsc",
    "type-check": "tsc --noEmit --pretty",
    "postinstall": "yarn build; if [ $DATABASE_JSON_FILE ]; then yarn run setup; fi",
    "test": "jest && tslint source/**/**/**.ts",
    "lint": " tslint source/**/**/**.ts",
    "generate:types:json": "ts-node source/scripts/json-types.ts && tslint source/**/*.ts --fix",
    "generate:types:schema": "typescript-json-schema tsconfig.json PerilSettingsRepoJSON > peril-settings-json.schema",
    "setup": "yarn run setup:plugins && yarn run setup:env",
    "setup:env": "node out/scripts/setup-env.js",
    "setup:plugins": "node out/scripts/setup-plugins.js",
    "deploy:staging": "yarn type-check && nf run scripts/deploy_staging.sh",
    "logs:staging": "/usr/local/bin/now logs --team peril staging-api.peril.systems",
    "docker:build:site": "docker build .",
    "docker:build:runner": "docker build -f Dockerfile.runner  -t runner .",
    "runner": "node out/runner/index.js",
    "precommit": "lint-staged; yarn type-check;",
    "postcommit": "yarn danger local --dangerfile dangerfile.lite.ts",
    "prepush": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danger/peril.git"
  },
  "engines": {
    "node": "10"
  },
  "author": "Orta",
  "license": "MIT",
  "availablePerilRuntimeDependencies": {
    "@slack/client": "^4.5.0",
    "danger": "^3",
    "danger-plugin-spellcheck": "^1.2.3",
    "danger-plugin-yarn": "^1.2.1",
    "jira-client": "6.4.1",
    "lodash": "4.17.4",
    "semver-sort": "0.0.4"
  },
  "dependencies": {
    "@sentry/node": "^4.0.0-rc.1",
    "@slack/client": "^4.5.0",
    "@types/agenda": "1.0.3",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/get-stdin": "^5.0.1",
    "@types/glob": "^5.0.35",
    "@types/jest": "^23.3.1",
    "@types/json5": "^0.0.30",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.116",
    "@types/mongodb": "^3.1.4",
    "@types/mongoose": "^5.2.7",
    "@types/node": "^9.1.2",
    "@types/node-cleanup": "^2.1.0",
    "@types/node-fetch": "^2.1.2",
    "@types/node-schedule": "^1.2.2",
    "@types/winston": "^2.4.4",
    "agenda": "1.0.3",
    "apollo-server-express": "^1.3.6",
    "async-exit-hook": "^2.0.1",
    "babel-cli": "7.0.0-alpha.19",
    "babel-core": "7.0.0-alpha.19",
    "babel-plugin-syntax-async-functions": "7.0.0-alpha.19",
    "babel-plugin-transform-flow-strip-types": "7.0.0-alpha.19",
    "babel-plugin-transform-regenerator": "7.0.0-alpha.19",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "7.0.0-alpha.19",
    "babel-preset-stage-3": "7.0.0-alpha.19",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "cookie": "^0.3.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "danger": "^4.0.1",
    "danger-plugin-yarn": "^1.3.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-x-hub": "^1.0.4",
    "get-stdin": "^6.0.0",
    "github-webhook-event-types": "^1.1.0",
    "glob": "^7.1.2",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-express": "^1.7.3",
    "graphql-relay-tools": "^0.1.1",
    "graphql-resolvers": "^0.2.2",
    "graphql-tools": "^3.1.1",
    "graphql-tools-types": "^1.1.26",
    "graphql-yoga": "^1.16.1",
    "hyper-aws4": "^1.1.3",
    "jest": "^23.5.0",
    "json2ts": "orta/json2ts#ts-less",
    "json5": "^2.0.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.9",
    "node-fetch": "2.2.0",
    "node-mocks-http": "^1.7.0",
    "node-schedule": "^1.3.0",
    "override-require": "^1.1.1",
    "primus": "^7.2.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "typings": "^2.1.1",
    "winston": "^2.4.2",
    "winston-papertrail": "^1.0.5",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@heroku/foreman": "^2.0.2",
    "@types/cookie": "^0.3.1",
    "@types/require-from-string": "^1.2.0",
    "husky": "^0.14.0",
    "lint-staged": "^7.2.2",
    "mockingoose": "^2.10.1",
    "prettier": "^1.14.2",
    "tslint-config-prettier": "^1.15.0",
    "typescript-json-schema": "^0.32.0"
  },
  "resolutions": {
    "jest/jest-cli/jest-haste-map/sane": "1.7.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/_tests/.*.test.ts$)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/source"
    ],
    "modulePaths": [
      "<rootDir>/source"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./source/testing/setupScript.js"
    ]
  },
  "lint-staged": {
    "*.json": [
      "yarn prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "yarn prettier --write",
      "git add"
    ],
    "*test.ts": [
      "jest -u"
    ],
    "*.md": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "proseWrap": "always"
  }
}
